<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Client.ViewModels;assembly=Client"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:rx="http://reactiveui.net"
        xmlns:v="clr-namespace:Client.Views;assembly=Client"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Client.Views.MainWindow"
        Icon="/Assets/logo.jpg"
        Title="Client"
		MinWidth="1000"
		MinHeight="600"
		>
	<Window.Styles>
		<StyleInclude Source="/Styles/DefaultTheme.axaml" />
		<StyleInclude Source="/Styles/DebugStyle.axaml" />
	</Window.Styles>
	
	<Design.DataContext>
		<vm:MainWindowViewModel/>
	</Design.DataContext>

	<rx:RoutedViewHost Router="{Binding Router}">
		<rx:RoutedViewHost.DefaultContent>
			<TextBlock Text="Default content"
					   HorizontalAlignment="Center"
					   VerticalAlignment="Center" />
		</rx:RoutedViewHost.DefaultContent>
	</rx:RoutedViewHost>
	
</Window>
