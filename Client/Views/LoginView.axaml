<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Client.ViewModels;assembly=Client"
             xmlns:v="clr-namespace:Client.Views;assembly=Client"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Client.Views.LoginView">
	<Design.DataContext>
		<vm:LoginViewModel/>
	</Design.DataContext>
	
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
		</Grid.RowDefinitions>

		<TextBox Grid.Row="0" Text="{Binding Username}"/>
		<TextBox Grid.Row="1" Text="{Binding Password}"/>
		<TextBlock Grid.Row="2" Text="{Binding Status}"/>
		<Button Grid.Row="3" Content="Login" Command="{Binding Login}"/>

	</Grid>
</UserControl>
